    <event eventtype="3" enumb="0">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>// special instance management
instance_activate_region(bbox_left - 2*view_wview, view_yview, 4*view_wview, view_hview, 1);
with(objEnemyProjectile) killOutsideView = false;

y = min(y, yo);
onGround = y == yo;

onWall = place_meeting(x + sign(dir), y, objSolid);
turnTimer = max(turnTimer - 1, 0);
stateTimer = max(stateTimer - 1, 0);

d_sin = sin(d_t);
d_angle = 360 + 10 * d_sin;
d_offy = -4 * abs(d_sin);
d_xscale = min(1, max(d_xscale + sign(dir) * .3, -1));

var e = instance_place(x, y, objEnemy);

if (random(10) &lt; 2) {
    var part = instance_create(x - 6 + random(12), y - 6 + random(6), objSaveParticle);
    part.color = make_color_hsv(random(35), 255, 255);
    part.yVel = .25;
    part.xVel = xVel;
}

// hurt impulse
if (e &amp;&amp; e.state == s.TOSS) {
    hp = max(hp - 1, 0);
    state = s.HURT;
    xVel = sign(x - e.x) * 2;
    yVel = -2;
    onGround = false;
    stateTimer = 60;
    shake();
    
    // death to all enemies
    for(var i = 0; i &lt; instance_number(objEnemy); i++) {
        var ei = instance_find(objEnemy, i);
        if (ei) with (ei) {
            instance_create(x, y, objBubblePop);
            instance_destroy();
        }
    }

}

// death impulse
if (hp == 0) {
    if (state != s.DEAD) {
        stateTimer = 90;
        state = s.DEAD;        
        var i = 0;
        repeat(4) {
            var flash = instance_create(x, y, objFlash);
            flash.delay = i * 30;
            i++;
            if (i == 3) {
                flash.delay += 30;
                flash.alpha = 2;
                flash.aVel = .01;
            }
        }
    }
}

// dying effect &amp; destruction
if (state == s.DEAD) {
    d_t = 0;
    xVel = 0;
    yVel = 0;
    if (stateTimer &lt; 30)
        global.keysEnabled = false;
        
    if(stateTimer % 10 == 0) {
        var eff = instance_create(x - T + random(2*T), y - T + random(2*T), objEffect);
    }

    if(!stateTimer) {
        c_out("Defeated boss with id", identifier);
        ds_list_add(global.ds_bosses, identifier);
        global.keysEnabled = true;
        instance_destroy();
    }
}

// knockback
if (state == s.HURT) {

    dir = sign(objPlayer.x - x);
    if (onGround || onWall) {
        d_t = 0;
        xVel = 0;        
    }
    
    if (!stateTimer) {
        state = s.WALK;
        stateTimer = 120;        
    }
}

// giving the player some time to get ready
if(state == s.IDLE) {
    if (!stateTimer) {
        stateTimer = 120;
        state = s.WALK;
    }
}

// walk
if (state == s.WALK) {
    if (!onGround) xVel = 0;
    else {
        if (!onWall) {
            xVel = sign(dir) * min(abs(xVel) + .02, 1.5);
        }
    }
    
    var _dir = sign(xVel);
    if (_dir != 0)
        dir = _dir;

    dx = max(abs(xVel) * .2, .2);
    if (!onWall)
        d_t = (d_t + sign(dir)* dx) % (2*pi);
    else {
        d_t = 0;
    }
}

// shoot projectiles
if (state == s.TOSS) {
    dir = sign(objPlayer.x - x);
    if (onGround) {
        onGround = false;
        yVel = choose(0, -1.5,-2.5,-3.6);
        
        if (!stateTimer) {
            y = yo;
            yVel = 0;
            stateTimer = 121;
            state = s.JUMP;
            spawn_x = xo + choose(-10, -5, 0, 5, 10, 15) * T;
            
            // kill the old
            /*with(objEnemy) {
                if (state != s.TOSS) {
                    instance_create(x, y, objBubblePop);
                    instance_destroy();
                }
            }*/
        }

    }
    xVel = 0;
    d_t = 0;
    modTimer = 30;
    if (hp == 4) modTimer = 20;
    if (hp == 3) modTimer = 20;
    if (hp == 2) modTimer = 10;
    if (hp == 1) modTimer = 10;
    if (stateTimer % modTimer == 0 &amp;&amp; stateTimer &gt; 0) {
        var proj = instance_create(x, y, objEnemyProjectile);
        proj.type = 0;
        proj.dir = dir;
    }
}

// jump &amp; spawn enemy
if (state == s.JUMP) {
    //x += sign(dir) * .1;
    move_outside_solid(180 * (dir == d.LEFT), 2);
    d_t = 0;    
    if (stateTimer &lt; 90) {
        
        var jumpVel = .75;        
        if (jumps == 1) jumpVel = .5;
        if (jumps == 2) jumpVel = 1;
        if (jumps == 3) jumpVel = 1.5;
        if (jumps &gt;= 4) jumpVel = 2;
        
        xVel = sign(dir) * jumpVel;
        if (onGround) {
            onGround = false;
            if(jumps) {
                yVel = -3;
                jumps --;
            }
            if (!jumps) {
                stateTimer = 180;
                state = s.WALK;
                xVel = 0;
                yVel = 0;
                y = yo;

                var eff = instance_create(spawn_x, yo + 8, objEffect);
                var e = instance_create(spawn_x, yo + 8, objEnemy);
                e.type = choose(7, 9);
                path_set_kind(e.path, 0);
                path_set_precision(e.path, 0);
                if (e.type == 7) {
                    e.movePattern = 2;
                    e.shot_delay = 120;
                    e.shot_type = 0;
                    path_set_closed(e.path, 0);
                    e.dir = sign(objPlayer.x -e.x);
                }
                if (e.type == 9) {
                    e.movePattern = 0;
                    path_add_point(e.path, 0, 0, 100);
                    path_add_point(e.path, 16, 0, 100);
                    path_add_point(e.path, -16, 0, 100);
                    path_set_closed(e.path, 1);
                    e.dir = 1;
                }
                e.path_spd = 1;               
            }
        }
    }
} else {
    jumps = maxHp - hp + 2;
}

// movement

if (onGround) {
    yVel = 0;
    y = yo;
} else {
    yVel += yGrav;
    y += yVel;
}

if (onWall) {
    if (xVel != 0)
        turnTimer = 30;
    if (state == s.WALK &amp;&amp; !turnTimer) {
        x -= dir;
        dir = -dir;
        stateTimer = 60;
        state = s.TOSS;
    }
    xVel = 0;
} else {
    x += xVel;
}

